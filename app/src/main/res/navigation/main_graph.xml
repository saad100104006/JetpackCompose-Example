<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.finxp.account.presentation.screens.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/login_screen"
            app:destination="@id/loginFragment" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.finxp.account.presentation.screens.login.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/account_screen"
            app:destination="@id/accountFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.finxp.account.presentation.screens.account.AccountFragment"
        android:label="Account">
    </fragment>
</navigation>